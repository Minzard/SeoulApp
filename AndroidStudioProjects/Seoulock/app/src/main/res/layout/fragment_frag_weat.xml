<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:fadeScrollbars="true"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="30dip"
            android:layout_marginBottom="30dip"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/lay_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:gravity="center">

                        <ImageView
                            android:id="@+id/img_weat"
                            android:layout_margin="10dip"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            />

                        <TextView
                            android:layout_margin="10dip"
                            android:gravity="center"
                            android:id="@+id/txt_main_tmp"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_centerHorizontal="true"
                            android:text="" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_min_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_table"
                    android:layout_centerHorizontal="true"
                    android:text="" />

                <TextView
                    android:id="@+id/txt_sky"
                    android:layout_margin="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_min_max"
                    android:layout_centerHorizontal="true"
                    android:text="" />

            </RelativeLayout>

            <LinearLayout android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="LOCATION"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/w_spinner"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <TableLayout
                android:layout_margin="20dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:gravity="center" android:layout_marginBottom="10dip">

                    <ImageView
                        android:src="@drawable/temp"
                        android:id="@+id/img_tmp"
                        android:layout_margin="15dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip" />

                    <TextView
                        android:id="@+id/txt_tmp"
                        android:text=""
                        android:layout_margin="15dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/hum"
                        android:id="@+id/img_hum"
                        android:layout_margin="15dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip" />

                    <TextView
                        android:id="@+id/txt_hum"
                        android:text=""
                        android:layout_margin="15dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>


                <TableRow android:gravity="center" android:layout_marginBottom="10dip">

                    <ImageView
                        android:src="@drawable/sun"
                        android:id="@+id/img_sun"
                        android:layout_margin="15dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip" />

                    <TextView
                        android:id="@+id/txt_sun"
                        android:text=""
                        android:layout_margin="15dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/rain"
                        android:id="@+id/img_rain"
                        android:layout_margin="15dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip" />

                    <TextView
                        android:id="@+id/txt_rain"
                        android:text=""
                        android:layout_margin="15dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>


                <TableRow android:gravity="center" android:layout_marginBottom="10dip">

                    <ImageView
                        android:src="@drawable/wind"
                        android:id="@+id/img_wind"
                        android:layout_margin="15dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip" />

                    <TextView
                        android:id="@+id/txt_wind"
                        android:text=""
                        android:layout_margin="15dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>


            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>